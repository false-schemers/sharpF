"(define-syntax let*-values"
"  (syntax-rules ()"
"    [(_ () . body) (let () . body)]"
"    [(_ ([(a) x] . b*) . body) (let ([a x]) (let*-values b* . body))]"
"    [(_ ([aa x] . b*) . body) (call-with-values (lambda () x) (lambda aa (let*-values b* . body)))]))"
