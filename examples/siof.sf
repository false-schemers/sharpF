"(define-syntax parameterize"
"  (letrec-syntax"
"    ([loop "
"      (syntax-rules ()"
"        [(_ ([param value p old new] ...) () body)"
"         (let ([p param] ...)"
"           (let ([old (p)] ... [new (p value #f)] ...)"
"             (dynamic-wind"
"               (lambda () (p new #t) ...)"
"               (lambda () . body)"
"               (lambda () (p old #t) ...))))]"
"        [(_ args ([param value] . rest) body)"
