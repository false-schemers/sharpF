"           (define a (void)) ..."
"           (define (call-with-values (lambda () x) (lambda new-aa (set! a tmp-a) ...))))]"
"        [(_ (new-a ...) (map-a ...) (a . aa) x) "
"         (loop (new-a ... tmp-a) (map-a ... [a tmp-a]) aa x)]"
"        [(_ (new-a ...) (map-a ...) a x) "
"         (loop (new-a ... . tmp-a) (map-a ... [a tmp-a]) () x)])])"
"    (syntax-rules ()"
"      [(_ () x) (define x)]"
"      [(_ aa x) (loop () () aa x)])))"
